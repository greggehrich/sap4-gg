<div class="panel top-margin-sap" >

  <div class="container left-margin-zero-sap">
    <div class="row">
      <div class="col-sm-2 pull-left">
        <h3 style="margin-top: 0px">Find Places</h3>
      </div>

      <div class="col-xl-10">
        <%= form_tag nil, method: :get do %>
          <%= text_field_tag :search, params[:search], placeholder: "Enter Title" %>
          <%= submit_tag 'Search', class: 'btn btn-primary' %>
        <% end %>
        <%= link_to 'Clear Search', stories_path %>
      </div>

    </div>
  </div>
</div>

<%= will_paginate @places %>
	<div class="panel">
	  <% @places.each do |place| %>
	    <h4 style="display:inline; line-height: 1.5"><%= link_to place.full_name, place_path(place) %></h4>&nbsp;&nbsp;&nbsp;
			<% if place.location.try(:city) && place.location.try(:state) %>
			     <p style="display:inline"><%= place.location.city %>, <%= place.location.state %></p><br>
			<% end %>
	  <% end %>
	</div>
<%= will_paginate(@places) %>

