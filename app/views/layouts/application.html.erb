<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag 'favicon.ico' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <% url_env = request.url %>
    <% if Rails.env.development? %>
      <% env_title = "SAP - dev" %>
    <% else %>
      <% if url_env.include? "staging" %>
        <%= env_title = "SAP - staging" %>
      <% else %>
        <%= env_title = "Stories About Places" %>
      <% end %>
    <% end %>
    <title><%= content_for?(:title) ? yield(:title) : env_title %></title>

    <meta name="Stories About Places" content="<%= content_for?(:description) ? yield(:description) : "Stories About Places" %>">
    <meta property="og:title" content="Stories About Places"/>
    <meta property="og:type" content="Aggregator"/>
    <meta property="og:description" content="Stories About Places"/>
    <meta property="article:publisher" content="Stories About Places" />
    <meta property="article:author" content="Ron Hodson" />

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Roboto:300,500' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Roboto+Condensed:300,500' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Open+Sans:Condensed' %>

    <%= javascript_include_tag 'application' %>

		<!--needed for google maps-->
    <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

    <%= csrf_meta_tags %>
  </head>

  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
       <%= render 'layouts/messages' %>
       <%= yield %>
    </main>
  </body>
</html>
