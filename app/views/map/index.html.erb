<div class="map_container container" style="margin-top: 100px">
  <div clas="row">
    <div class="map_search col-md-12">
      <form action="javascript:void(0)" method="GET" class="form-inline map_search_form" data-user-id="1">
        <div class="form-group col-md-12">
          <input type="text" name="search" class="form-control" placeholder="Enter Location"/>
        </div>
        <button type="submit" class="btn btn-default">Search</button>
      </form>
    </div>
    <div class="col-md-12">
      <div id="search_map_canvas" style="height: 100%"></div>
    </div>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<%= javascript_include_tag 'application' %>
