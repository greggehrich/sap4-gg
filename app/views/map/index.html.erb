<!--style to fix google map zoom display-->
<style>
	.gm-style img { max-width: none; }
	.gm-style label { width: auto; display: inline; }
</style>

<script type="text/javascript" id="favorite_places_json">
  <%= raw @favorite_places_json %>
</script>

<div class="panel top-margin-sap" style="padding-bottom: 0px; padding-right: 5px" >
  <div class="container left-margin-zero-sap">
    <div class="row" style="padding-top: 5px">
			<div class="col-md-7">
	      <form action="javascript:void(0)" method="GET" class="form-inline map_search_form" data-user-id="1">
	        <div class="form-group" style="display: inline; padding: 2px 0 3px 0">
	          <input type="text" name="search" class="form-control" placeholder="Enter Location" />
	        </div>
					<div class="radio">
					  <label>
					    <input type="radio" name="places_options" value="favorite_places" checked>
					    Favorite Places
					  </label>
					</div>
					<div class="radio">
					  <label>
					    <input type="radio" id="all_places_radio_btn" name="places_options" value="all_places">
					    <span class="text-muted">All Places</span>
					  </label>
					</div>
	        <button type="submit" class="btn btn-info btn-sm" style="margin-top: 5px">Search</button>
	      </form>
			</div>
    </div>
    <div class="search-header">
		</div>
  </div>
</div>

<div class="col-md-offset-3 col-md-5 loading_div">
	<div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
		Loading Map
	</div>
</div>

<div class="col-md-offset-3 col-md-5 loading_places_div hidden">
	<div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
		Loading Places
	</div>
</div>

<div class="col-md-12" id="map_container_div" data-user-zip-code="<%= current_user.zip_preference %>">
  <div id="map_canvas" style='width: 100%; height: 800px;'></div>
</div>
