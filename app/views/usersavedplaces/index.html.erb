<div class="panel top-margin-sap" style="padding-bottom: 0px; padding-right: 5px" >
  <p style="font-size: 1em; display: inline"> <%= link_to "Search All Places Instead", places_path %></p>
  <div class="container left-margin-zero-sap">
    <div class="row">
      <div class="col-xs-1 col-sm-3 col-md-2" style="padding-left: 0px">
        <h3 class="search-text" style="margin-top: 0px">My Places</h3>
      </div>

      <div class="col-xs-12 col-sm-9 col-md-10">
        <%= form_tag nil, method: :get do %>
          <%= text_field_tag :search, params[:search], placeholder: "Enter Place Title" %>&nbsp;
          <%= submit_tag 'Search', class: 'btn btn-sm btn-primary' %>
        <% end %>
        <p style="font-size: .8em; line-height: 80%">&nbsp;<%= link_to 'clear search', my_savedplaces_path %></p>
      </div>

    </div>
  </div>
</div>

<%= will_paginate @my_savedplaces %>
	<div class="panel">
	  <% @my_savedplaces.each do |place| %>

			<% if place.place.try(:name) %>
		    <h4 style="display:inline; line-height: 1.5; font-family: 'Roboto Condensed'">
		      <%= link_to place.place.name, place_path(place) %></h4>&nbsp;&nbsp;&nbsp;
		    <% if place.place.location.try(:city) && place.place.location.try(:state) %>
		      <p class="text-muted" style="display:inline"><%= place.place.location.city %>, <%= place.place.location.state %></p><br>
		    <% end %>
	    <% end %>

	<% end %>
	</div>
<%= will_paginate(@my_savedplaces) %>


