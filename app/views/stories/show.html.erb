<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<h2><%= @story.title %> [STORY]</h2>

<div class="panel">
  <h4 style="float:left" >Id&nbsp;&nbsp;</h4>
	<div style="padding-top: 11px;" ><%= @story.id %></div>
  <h4 style="clear:left" >Title/Description</h4>
  <%= @story.title %>&nbsp;&nbsp;
  <%= @story.description %>
</div>

<div class="panel">
  <h4>Authors</h4>
  <ul>
    <% @story.authors.each do |author| %>
      <li><%= author.first_name %>&nbsp;
          <%= author.last_name %></li>
    <% end %>
  </ul>
</div>

<div class="panel">
  <h4>Categories</h4>
  <ul>
    <% @story.story_categories.each do |category| %>
      <li><%= category.name %></li>
    <% end %>
  </ul>
</div>

<div class="panel">
  <h4>Places</h4>
  <ul>
    <% @story.places.each do |place| %>
      <li><%= link_to place.full_name, place_path(place) %></li>
    <% end %>
  </ul>
</div>

<div class="panel">
  <h4>Locations</h4>
  <ul>
    <% @places.each do |place| %>
      <li><%= place.location.lat %>&nbsp;&nbsp;<%= place.location.lng %></li>
    <% end %>
  </ul>
</div>

<!--style to fix google map zoom display-->
<style>
	.gm-style img { max-width: none; }
	.gm-style label { width: auto; display: inline; }
</style>

<div style='width: 800px;'>
  <div id="map_canvas" style='width: 1000px; height: 600px;'></div>
</div>

<script type="text/javascript">
	handler = Gmaps.build('Google');
	handler.buildMap({
		provider: {},
		internal: {id: 'map_canvas'}
	},
	function(){
	markers = handler.addMarkers(<%=raw @hash.to_json %>);
	handler.bounds.extendWith(markers);
	handler.fitMapToBounds();
	});
</script>

<div class="panel">
  <h4>Urls</h4>
  <ul>
    <% @story.urls.each do |url| %>
      <li><%= url.full_url %></li>
    <% end %>
  </ul>
</div>

<% if @story.images.first.try(:url) %>
	<%= @story.images.first.url.full_url %><br>
	<div class="pull-left"><%= image_tag @story.images.first.url.full_url, :width =>200 %></div>
<% end %>

<div style="float:left; position:absolute; padding-top:140px;"><%= link_to 'Back to Stories Index', stories_path %></div>
