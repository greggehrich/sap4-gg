<div class="container container-sap top-margin-sap">
  <div class="panel panel-default">
    <div class="panel-body panel-sap">

			<table class="table table-condensed">
				<caption style="font-size: 1.22em; font-weight: 400; text-align: center; padding: 0">My Saved Stories</caption>
			  <thead>
			  <tr>
			    <th><p class="hidden-xs" style="display: inline">Saved</p>&nbsp;</th>
			    <th><p class="hidden-xs" style="display: inline">Published</p>&nbsp;</th>
			    <th><p style="display: inline">Story Title</p></th>
			    <th colspan="4"></th>
			  </tr>
			  </thead>

			  <tbody>
			    <% @my_stories.each do |s| %>
				    <tr>
				      <td><%= s.created_at.in_time_zone("Pacific Time (US & Canada)").try(:strftime, "%b %d, %Y") %> </td>
				      <td><%= s.story.title %> </td>
				      <td style="line-height: 1.0">&nbsp;<%= link_to 'View Story', s.story.urls.first.full_url, target: "_blank", class: 'btn btn-info btn-sm btn-view', id: 'btn-view-link' %>&nbsp;</td>
				      <td style="line-height: 1.0">&nbsp;<%= button_to 'Forget', destroy_usersavedstories_path(s.story_id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-forget' %>&nbsp;</td>
				    </tr>
			    <% end %>
			  </tbody>

			</table>

	  </div>
  </div>
</div>