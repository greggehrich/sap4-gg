<br><br><h1>Listing Story locations</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slocations.each do |slocation| %>
      <tr>
        <td><%= slocation.code %></td>
        <td><%= slocation.name %></td>
        <td><%= link_to 'Show', slocation %></td>
        <td><%= link_to 'Edit', edit_slocation_path(slocation) %></td>
        <td><%= link_to 'Destroy', slocation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

